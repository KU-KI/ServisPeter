    ViewData["Title"] = "Delete";
}

<h1 style="color:darkslategrey;font-size:40px; font-weight:bold;">Odstránenie náradia </h1>

<div class="bg-danger text-white">
    <h1 style="font-size:30px;text-align:center;">
        Si si istý, že to chceš urobiť?
    </h1>
</div>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nazov)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nazov)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Typ)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Typ)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Poznamky)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Poznamky)
        </dd>
    </dl>

    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Odstrániť" class="btn btn-danger" />
        </form>
        <br />
        <form asp-controller="Strojes" asp-action="Index">
            <p>
                <input type="submit" value="Späť" class="btn btn-default" />
            </p>
        </form>
    </div>
</div>